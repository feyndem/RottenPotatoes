%h1 All movies

= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating#ratings_#{rating}
    = check_box_tag "ratings[#{rating}]", 1, @keys.include?(rating)
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:id => "title_header", :class => @order == "title" && "hilite"}
        = link_to 'Movie Title', movies_path({:criteria => :title})
      %th Rating
      %th{:id => "release_date_header", :class => @order == "release_date" && "hilite"}
        = link_to 'Release Date', movies_path({:criteria => :release_date})
      %th More info
    %tbody
      - @movies.each do |movie|
        %tr 
          %td= movie.title 
          %td= movie.rating 
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path   