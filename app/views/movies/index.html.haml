%h1 All movies

%table#movies
  %thead
    %tr
      %th{:id => "title_header", :class => @order == "title" && "hilite"}
        = link_to 'Movie Title', movies_path({:criteria => :title})
      %th Rating
      %th{:id => "release_date_header", :class => @order == "release_date" && "hilite"}
        = link_to 'Release Date', movies_path({:criteria => :release_date})
      %th More info
    %tbody
      - @movies.each do |movie|
        %tr 
          %td= movie.title 
          %td= movie.rating 
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path           